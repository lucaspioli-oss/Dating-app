rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function hasActiveSubscription() {
      return isAuthenticated() &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.subscription.status == 'active' &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.subscription.expiresAt > request.time;
    }

    // Users collection
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isOwner(userId);
      allow delete: if false; // Nunca permitir deletar usuários
    }

    // User profiles (perfis de matches salvos)
    match /profiles/{profileId} {
      allow read: if isAuthenticated() &&
                     resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() &&
                       request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() &&
                       resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() &&
                       resource.data.userId == request.auth.uid;
    }

    // Conversations
    match /conversations/{conversationId} {
      // Leitura: usuário autenticado pode ler suas próprias conversas
      allow read: if isAuthenticated() &&
                     resource.data.userId == request.auth.uid;

      // Escrita: requer assinatura ativa
      allow write: if isAuthenticated() &&
                      resource.data.userId == request.auth.uid &&
                      hasActiveSubscription();

      // Criar: requer assinatura ativa
      allow create: if isAuthenticated() &&
                       request.resource.data.userId == request.auth.uid &&
                       hasActiveSubscription();

      // Deletar: dono pode deletar
      allow delete: if isAuthenticated() &&
                       resource.data.userId == request.auth.uid;
    }

    // Analytics
    match /analytics/{userId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if false; // Only Cloud Functions can update
      allow delete: if false;
    }

    // Subscriptions (managed by Cloud Functions via Hotmart webhook)
    match /subscriptions/{subscriptionId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow write: if false; // Only Cloud Functions can write
    }
  }
}
